---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="preload" href="/texture.webp" as="image" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <meta charset="UTF-8" />
    <meta name="author" content="Daniel Lambarri" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="portfolio, daniel, lambarri, fullstack, javascript"
    />
    <meta
      name="description"
      content="Portfolio personal Daniel Lambarri, desarrollador Fullstack de javascript, React, svelte, node, base de datos"
    />
    <script
      defer
      src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"
    ></script>
    <script
      defer
      src="https://unpkg.com/@lottiefiles/lottie-interactivity@latest/dist/lottie-interactivity.min.js"
    ></script>
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://danilamdevportfolio.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Portfolio personal Daniel Lambarri, desarrollador Fullstack de javascript, React, svelte, node, base de datos"
    />
    <meta property="og:image" content="/logo.svg" />
    <meta
      property="og:image:alt"
      content="logo del portfolio de Daniel Lambarri"
    />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="danilamdevportfolio.vercel.app" />
    <meta
      property="twitter:url"
      content="https://danilamdevportfolio.vercel.app/"
    />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Portfolio personal Daniel Lambarri, desarrollador Fullstack de javascript, React, svelte, node, base de datos"
    />
    <meta name="twitter:image" content="/logo.svg" />
    <meta
      property="twitter:image:alt"
      content="logo del portfolio de Daniel Lambarri"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
  <script>
    window.scrollTo(0, 500);
  </script>
</html>

<style is:global>
  .section {
    position: relative;
    width: 100vw;
    height: 100vh;
  }
</style>
