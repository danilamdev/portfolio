---
const { project } = Astro.props;
---

<article
  class="w-full bg-white flex flex-col md:flex-row md:h-[25rem] xl:h-[30rem] h-[600px] rounded-xl overflow-hidden pb-10 md:pb-0 hover:shadow-lg hover:shadow-indigo-200/50 transition-all hover:scale-[1.01]"
>
  <img
    src={project.image}
    alt=""
    class="w-full aspect-video object-cover md:w-1/2 md:h-full"
  />

  <div class="px-5 mt-8 flex flex-col h-full md:w-1/2 md:mt-0 md:py-8">
    <p class="font-bold mb-4 text-lg md:text-center md:text-base xl:text-lg">
      {project.title}
    </p>
    <div
      class="tags-container mb-10 flex flex-wrap gap-2 xl:gap-4 xl:my-5 mx-auto"
    >
      {
        project.tags.map((tag) => (
          <>
            <span class="text-xs md:text-[10px] xl:text-xs">{tag}</span>
          </>
        ))
      }
    </div>
    <p
      class="text-sm text-slate-500 leading-7 md:text-xs md:leading-7 xl:text-sm xl:leading-7 xl:text-center xl:mt-5"
    >
      {project.description}
    </p>
    <div class="mt-auto px-6 flex items-center justify-between">
      <a
        href={project.githubLink}
        target="_blank"
        class="bg-slate-800 text-white text-base flex items-center gap-2 py-2 px-4 rounded-xl md:text-xs xl:text-base hover:bg-slate-700"
        ><span
          ><svg
            width="17"
            height="17"
            viewBox="0 0 17 17"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <g clip-path="url(#clip0_15_5)">
              <path
