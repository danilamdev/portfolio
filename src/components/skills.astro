---
import { getSkills } from "../getSkills.js";

const mySkills = await getSkills();
---

<section id="skills" class="bg-slate-100 py-24 xl:py-36">
  <h2
    class="skills-title mb-24 text-slate-700 font-bold w-max mx-auto text-4xl text-center font-poppins relative md:text-5xl xl:text-6xl 2xl:text-7xl xl:mb-32 2xl:mb-52 lg:mb-32"
  >
    Habilidades
  </h2>
  <div
    class="w-10/12 max-w-7xl lg:w-[70%] lg:gap-x-12 lg:gap-y-14 mx-auto flex flex-wrap justify-between gap-y-8 gap-x-4 xl:gap-x-10 xl:gap-y-10 2xl:gap-x-16 2xl:gap-y-24"
  >
    {
      mySkills.map((skill) => (
        <div class="w-16 h-16 md:w-14 md:h-14 xl:w-18 xl:h-18 2xl:w-24 2xl:h-24">
          <img
            src={`/skills/${skill}`}
            alt="conocimiento de html"
            class="w-full h-full saturate-50 hover:saturate-100 hover:scale-105 transition-all"
          />
        </div>
      ))
    }
  </div>
</section>

<style>
  .skills-title::after {
    content: "";
    position: absolute;
    top: -0.3em;
    left: 0;
    width: 1em;
    height: 0.2em;
    background-color: rgb(184, 161, 245);
    border-radius: 35px;
  }
</style>
